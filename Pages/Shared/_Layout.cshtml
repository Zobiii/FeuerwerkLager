@*
    Gemeinsames Layout – Glassmorphism Shell
*@
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Feuerwerk Lager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="app-shell">
    <div class="background-aurora"></div>

    <header class="glass-nav">
        <div class="container nav-inner">
            <a class="brand" asp-page="/Index">
                <span class="brand-mark"></span>
                <span>
                    <span class="brand-title">Feuerwerk Lager</span>
                    <span class="brand-subtitle">Inventory Control</span>
                </span>
            </a>

            <nav class="nav-links">
                <a class="nav-link-glass" asp-page="/Index">Dashboard</a>

                <div class="dropdown">
                    <a class="nav-link-glass dropdown-toggle" href="#" data-bs-toggle="dropdown">Artikel</a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-page="/Articles/Create">Neu anlegen</a></li>
                        <li><a class="dropdown-item" asp-page="/Articles/Edit">Bearbeiten</a></li>
                        <li><a class="dropdown-item" asp-page="/Articles/Delete">Löschen</a></li>
                    </ul>
                </div>

                <div class="dropdown">
                    <a class="nav-link-glass dropdown-toggle" href="#" data-bs-toggle="dropdown">Lager</a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-page="/Locations/Index">Lagerplätze</a></li>
                        <li><a class="dropdown-item" asp-page="/Locations/Create">Neu anlegen</a></li>
                        <li><a class="dropdown-item" asp-page="/Locations/Delete">Löschen</a></li>
                        <li><a class="dropdown-item" asp-page="/Locations/Barcodes">Barcodes</a></li>
                        <li><a class="dropdown-item" asp-page="/Reports/NemOverview">NEM-Report</a></li>
                    </ul>
                </div>

                <div class="dropdown">
                    <a class="nav-link-glass dropdown-toggle" href="#" data-bs-toggle="dropdown">Bestand</a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-page="/Bookings/Index">Buchen</a></li>
                        <li><a class="dropdown-item" asp-page="/Stock/Add">Bestand erhöhen</a></li>
                        <li><a class="dropdown-item" asp-page="/Inventory/Set">Inventur</a></li>
                    </ul>
                </div>

                <a class="nav-link-glass" asp-page="/Logs/Index">Log</a>
                <a class="nav-link-glass" asp-page="/Admin/Index">Admin</a>
            </nav>

            <div class="nav-actions">
                <a asp-page="/Stock/Add" class="btn-main btn-sm">Bestand +</a>
                <a asp-page="/Bookings/Index" class="btn-secondary-custom btn-sm">Buchen</a>
            </div>
        </div>
    </header>

    <main role="main" class="app-main">
        <div class="container page-stack">
            @RenderBody()
        </div>
    </main>

    <footer class="app-footer">
        <div class="container footer-inner">
            <div>
                <span class="footer-title">Feuerwerk Lager</span>
                <div class="footer-tagline">Inventur entspannt – NEM im Blick</div>
            </div>
            <div class="footer-meta">
                <span>&copy; @DateTime.Now.Year</span>
                <span>Build @System.Reflection.Assembly.GetExecutingAssembly().GetName().Version</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

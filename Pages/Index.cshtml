@page
@model FeuerwerkLager.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<section class="dashboard-hero glow-panel">
    <div class="hero-copy">
        <div class="hero-pill">Control Center</div>
        <h1>Realtime Lagerstatus</h1>
        <p>Alle Artikel, Kartons und Buchungen auf einen Blick. Plane den n&auml;chsten Schritt mit klaren Insights.</p>
    </div>
</section>

<div class="summary-grid">
    <div class="summary-card">
        <div class="summary-label">Artikel</div>
        <div class="summary-value">@Model.TotalArticleCount</div>
        <div class="summary-sub">verschiedene Feuerwerksartikel im System</div>
    </div>
    <div class="summary-card">
        <div class="summary-label">Lagerpl&auml;tze</div>
        <div class="summary-value">@Model.TotalLocationCount</div>
        <div class="summary-sub">Karton / Lagerpositionen</div>
    </div>
    <div class="summary-card">
        <div class="summary-label">NEM gesamt</div>
        <div class="summary-value">@Model.TotalNemAll.ToString("0.##")</div>
        <div class="summary-sub">Summe aller NEM (&uuml;ber alle Lagerpl&auml;tze)</div>
    </div>
    <div class="summary-card">
        <div class="summary-label">Einzelteile gesamt</div>
        <div class="summary-value">@Model.TotalPiecesAll</div>
        <div class="summary-sub">aus allen Multi-Part-Artikeln</div>
    </div>
</div>

<div class="card filter-card mb-3">
    <div class="card-body">
        <form method="get" class="filter-bar">
            <div class="form-group">
                <label asp-for="SearchTerm">Suche</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Artikel, Firma, Produktnummer, Kategorie..." />
            </div>

            <div class="form-group">
                <label asp-for="FilterLocationId">Lagerplatz</label>
                <select asp-for="FilterLocationId" class="form-select">
                    <option value="">Alle</option>
                    @foreach (var loc in Model.Locations)
                    {
                        <option value="@loc.Id">@loc.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="OnlyFree">Nur freie Best&auml;nde</label><br />
                <input asp-for="OnlyFree" type="checkbox" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn-main">
                    Filter anwenden
                </button>
            </div>
        </form>
        <p class="hint-text mb-0 mt-2">Suche durchsucht Artikelname, Firma, Produktnummer und Kategorie.</p>
    </div>
</div>


<div class="card">
    <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-md-center">
        <div>
            <h2 class="card-title mb-0">Bestands&uuml;bersicht</h2>
            <small class="text-muted">Live Datenquelle aus dem FireworksContext</small>
        </div>
        <span class="badge bg-secondary soft-badge">Positionen (gefiltert): @Model.Stock.Count</span>
    </div>
    <div class="card-body table-wrapper">
        <table class="table table-sm custom-table">
            <thead>
                <tr>
                    <th>Artikel</th>
                    <th>Kategorie</th>
                    <th>Produktnummer</th>
                    <th>Firma</th>
                    <th>Lagerplatz</th>
                    <th class="text-end">Menge</th>
                    <th class="text-end">Einzelteile</th>
                    <th class="text-end">NEM gesamt</th>
                </tr>
            </thead>
            <tbody>
            @if (!Model.Stock.Any())
            {
                <tr>
                    <td colspan="8" class="text-center py-4 text-muted">
                        Noch keine Artikel oder Best&auml;nde vorhanden oder Filter liefert keine Treffer.
                    </td>
                </tr>
            }
            else
            {
                foreach (var row in Model.Stock)
                {
                    <tr>
                        <td>@row.ArticleName</td>
                        <td>@row.Category</td>
                        <td>@row.ProductNumber</td>
                        <td>@row.Company</td>
                        <td>
                            @if (row.IsFree)
                            {
                                <span class="badge-free">frei</span>
                            }
                            else
                            {
                                <span class="badge-location">@row.LocationName</span>
                            }
                        </td>
                        <td class="text-end">@row.Quantity</td>
                        <td class="text-end">
                            @if (row.TotalPieces.HasValue)
                            {
                                @row.TotalPieces.Value
                            }
                        </td>
                        <td class="text-end">
                            @if (row.TotalNEM.HasValue)
                            {
                                @row.TotalNEM.Value.ToString("0.##")
                            }
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

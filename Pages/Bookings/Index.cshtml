@page
@model FeuerwerkLager.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Buchungen";
}

<div class="page-header">
    <h2>Artikel buchen</h2>
    <p>Artikel zwischen "frei" und Lagerplätzen bzw. zwischen Lagerplätzen umbuchen.</p>
</div>

<div class="form-card">
    <form method="post">
        <div asp-validation-summary="All" class="validation-summary-errors mb-3"></div>

        <div class="form-grid two-columns">
            <div class="form-group">
                <label for="articleSelect">Artikel</label>
                <select asp-for="SelectedArticleId" class="form-select" id="articleSelect">
                    @foreach (var a in Model.Articles)
                    {
                        <option value="@a.Id">@a.Name (@a.Company)</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="FullUnitsToMove">Volle Einheiten</label>
                <input asp-for="FullUnitsToMove"
                       class="form-control"
                       type="number"
                       id="fullUnitsInput"
                       min="0" />
            </div>

            <div class="form-group">
                <label asp-for="LoosePiecesToMove">Lose Einzelteile</label>
                <input asp-for="LoosePiecesToMove"
                       class="form-control"
                       type="number"
                       id="loosePiecesInput"
                       min="0" />
                <small id="quantityHint" class="text-muted"></small>
            </div>

            <div class="form-group">
                <label for="fromLocationSelect">Von (Ausgang)</label>
                <select asp-for="FromLocationId" class="form-select" id="fromLocationSelect">
                    <option value="">frei</option>
                    @foreach (var l in Model.Locations)
                    {
                        <option value="@l.Id">@l.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Nach (Ziel)</label>
                <select asp-for="ToLocationId" class="form-select" id="toLocationSelect">
                    <option value="">frei</option>
                    @foreach (var l in Model.Locations)
                    {
                        <option value="@l.Id">@l.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn-main">
                Buchen
            </button>
            <a asp-page="/Index" class="btn-secondary-custom">
                Zurück zum Dashboard
            </a>
        </div>
    </form>
</div>

@section Scripts {
<script>
    (function () {
        // Map aus dem Model: "ArticleId|LocationId/free" -> verfügbare Stücke
        var availability = {
            @foreach (var kv in Model.AvailabilityPieces)
            {
                <text>"@kv.Key": @kv.Value,</text>
            }
        };

        // Map: ArticleId -> Stücke pro Einheit (1, wenn kein Multipart)
        var perUnitMap = {
            @foreach (var kv in Model.PiecesPerUnitMap)
            {
                <text>"@kv.Key": @kv.Value,</text>
            }
        };

        function updateHint() {
            var articleSelect = document.getElementById('articleSelect');
            var fromSelect = document.getElementById('fromLocationSelect');
            var hint = document.getElementById('quantityHint');
            var fullInput = document.getElementById('fullUnitsInput');
            var looseInput = document.getElementById('loosePiecesInput');

            if (!articleSelect || !fromSelect || !hint) return;

            var articleId = articleSelect.value;
            var fromLocId = fromSelect.value;
            var key = articleId + "|" + (fromLocId === "" ? "free" : fromLocId);

            var maxPieces = availability[key] || 0;
            var perUnit = perUnitMap[articleId] || 1;

            var maxFull = Math.floor(maxPieces / perUnit);
            var maxLoose = maxPieces % perUnit;

            if (fullInput) {
                fullInput.min = 0;
                fullInput.max = maxFull;
            }
            if (looseInput) {
                looseInput.min = 0;
                looseInput.max = perUnit > 0 ? perUnit - 1 : 0;
            }

            if (maxPieces > 0) {
                hint.textContent = "Verfügbar: " + maxPieces + " Stück (" + maxFull + " volle, " + maxLoose + " lose).";
            } else {
                hint.textContent = "Am gewählten Ausgang ist aktuell keine Menge verfügbar.";
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            var articleSelect = document.getElementById('articleSelect');
            var fromSelect = document.getElementById('fromLocationSelect');

            if (articleSelect) {
                articleSelect.addEventListener('change', updateHint);
            }
            if (fromSelect) {
                fromSelect.addEventListener('change', updateHint);
            }

            updateHint();
        });
    })();
</script>
}

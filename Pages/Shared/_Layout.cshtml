<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Feuerwerk Lager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="topbar">
        <div class="container topbar-inner">
            <a class="brand" asp-page="/Index">Feuerwerk Lager</a>
            <nav class="main-nav">
                <a asp-page="/Index">Dashboard</a>
                <a asp-page="/Bookings/Index">Buchen</a>
                <a asp-page="/Stock/Add">Bestand +</a>
                <a asp-page="/Inventory/Set">Inventur</a>
                <a asp-page="/Locations/Index">Lagerpl√§tze</a>
                <a asp-page="/Reports/NemOverview">NEM</a>
                <a asp-page="/Logs/Index">Log</a>
                <a asp-page="/Admin/Index">Admin</a>
            </nav>
        </div>
    </header>

    <main class="container app-main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container footer-inner">
            <span>&copy; @DateTime.Now.Year Feuerwerk Lager</span>
            <span>Build @System.Reflection.Assembly.GetExecutingAssembly().GetName().Version</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

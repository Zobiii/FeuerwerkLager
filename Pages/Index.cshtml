@page
@model FeuerwerkLager.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<section class="card mb-3">
    <div class="card-body">
        <h1 class="h4 mb-1">Lagerübersicht</h1>
        <p class="text-muted mb-0">Schneller Arbeitsablauf: Bestand erhöhen, buchen, Inventur setzen.</p>
    </div>
</section>

<div class="summary-grid">
    <div class="summary-card">
        <div class="summary-label">Artikel</div>
        <div class="summary-value">@Model.TotalArticleCount</div>
    </div>
    <div class="summary-card">
        <div class="summary-label">Lagerplätze</div>
        <div class="summary-value">@Model.TotalLocationCount</div>
    </div>
    <div class="summary-card">
        <div class="summary-label">Positionen</div>
        <div class="summary-value">@Model.TotalStockPositionsAll</div>
    </div>
    <div class="summary-card">
        <div class="summary-label">NEM gesamt</div>
        <div class="summary-value">@Model.TotalNemAll.ToString("0.##")</div>
    </div>
</div>

<div class="action-grid mb-3">
    <a asp-page="/Stock/Add" class="action-card">
        <strong>1) Bestand erhöhen</strong>
        <span class="action-note">Neue Ware direkt einbuchen.</span>
    </a>
    <a asp-page="/Bookings/Index" class="action-card">
        <strong>2) Zwischen Plätzen buchen</strong>
        <span class="action-note">Von frei ↔ Lagerplatz in Stücklogik.</span>
    </a>
    <a asp-page="/Inventory/Set" class="action-card">
        <strong>3) Inventur setzen</strong>
        <span class="action-note">Ist-Bestand direkt korrigieren.</span>
    </a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="filter-bar">
            <input asp-for="SearchTerm" class="form-control" placeholder="Suche Artikel/Firma/Produktnummer/Kategorie" />

            <select asp-for="FilterLocationId" class="form-select">
                <option value="">Alle Lagerplätze</option>
                @foreach (var loc in Model.Locations)
                {
                    <option value="@loc.Id">@loc.Name</option>
                }
            </select>

            <label class="inline-check">
                <input asp-for="OnlyFree" type="checkbox" />
                Nur freie Bestände
            </label>

            <button type="submit" class="btn btn-primary">Filtern</button>
            <a asp-page="/Index" class="btn btn-outline-secondary">Reset</a>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="h6 mb-0">Bestand (@Model.Stock.Count)</h2>
    </div>
    <div class="card-body table-wrapper">
        <table class="table table-sm custom-table">
            <thead>
                <tr>
                    <th>Artikel</th>
                    <th>Firma</th>
                    <th>Lagerplatz</th>
                    <th class="text-end">Volle</th>
                    <th class="text-end">Lose</th>
                    <th class="text-end">Stück gesamt</th>
                    <th class="text-end">NEM</th>
                </tr>
            </thead>
            <tbody>
            @if (!Model.Stock.Any())
            {
                <tr><td colspan="7" class="text-center text-muted py-3">Keine Treffer.</td></tr>
            }
            else
            {
                foreach (var row in Model.Stock)
                {
                    <tr>
                        <td>@row.ArticleName</td>
                        <td>@row.Company</td>
                        <td>@(row.IsFree ? "frei" : row.LocationName)</td>
                        <td class="text-end">@row.FullUnits</td>
                        <td class="text-end">@row.LoosePieces</td>
                        <td class="text-end">@(row.TotalPieces ?? (row.FullUnits + row.LoosePieces))</td>
                        <td class="text-end">@row.TotalNEM?.ToString("0.##")</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
